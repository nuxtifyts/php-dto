{
    "name": "nuxtifyts/php-dto",
    "description": "PHP DataTransferObject",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fa-BRAIK",
            "email": "faroukbraik17@gmail.com"
        }
    ],
    "require": {
        "php": "~8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.4"
    },
    "autoload": {
        "psr-4": {
            "Nuxtifyts\\PhpDto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nuxtifyts\\PhpDto\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "ci-test": "XDEBUG_MODE=coverage vendor/bin/phpunit --testsuite=ci --configuration phpunit.xml",
        "phpstan": "vendor/bin/phpstan analyse --configuration phpstan.neon"
    }
}
